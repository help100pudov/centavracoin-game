{
  "morphing_hull_spec": {
    "version": "1.0",
    "last_updated": "2025-08-14",
    "mission_profiles": [
      {
        "id": "reentry_drag_shield",
        "goals": ["maximize_drag", "maximize_thermal_dissipation", "maintain_attitude_stability"],
        "preferred_shapes": ["disk", "biconvex", "blunt_cone"],
        "environment": { "atm": "CO2|N2|vacuum", "density_range": [1e-9, 1.4], "temp_K": [100, 2500], "plasma": true }
      },
      {
        "id": "deep_space_cruise",
        "goals": ["minimize_drag", "minimize_cross_section", "maximize_radiation_shielding"],
        "preferred_shapes": ["needle", "tube"],
        "environment": { "atm": "vacuum", "temp_K": [3, 500], "radiation": "GCR|SEP" }
      },
      {
        "id": "atmospheric_sprint",
        "goals": ["maximize_lift_to_drag", "control_maneuverability"],
        "preferred_shapes": ["delta_wing", "elliptic_disc"],
        "environment": { "atm": "N2/O2|CO2", "mach": [0.2, 7] }
      }
    ],

    "shape_library": {
      "needle":   { "parametric": "L>>D, nose_cone=ogive, fineness_ratio>=8" },
      "tube":     { "parametric": "cyl(D,L), rounded_endcaps" },
      "disk":     { "parametric": "flat_disc(D), t/D<=0.03, filleted_edge" },
      "drop":     { "parametric": "superellipse(a,b,n), n∈[2,4], tail_taper" },
      "delta_wing": { "parametric": "swept_wing(Λ,AR), Λ∈[50°,75°], AR∈[1,3]" },
      "blunt_cone": { "parametric": "cone(θ) with spherical_cap(r_b)" }
    },

    "materials_stack": {
      "outer_skin": [
        { "type": "liquid_metal_skin", "alloy": "EGaInSn", "thickness_mm": 2.0, "additives": ["graphene_flakes", "MXene_nanosheets"], "state_switch": "EM_field + local_heating" },
        { "type": "metamaterial_tiles", "function": ["EMI_shield", "radiation_scatter"], "tunable": true }
      ],
      "actuation_layers": [
        { "type": "SMA_lattice", "alloy": "NiTi", "strain_max": 0.08, "control": "Joule_heating + cooling" },
        { "type": "dielectric_elastomer_actuator", "max_strain": 0.2, "voltage_kV": [1, 6] },
        { "type": "magnetorheological_channels", "control": "B_field 0-1T" }
      ],
      "structural_core": [
        { "type": "origami_truss", "material": "basalt_fiber_composite|CFRP", "topology": "Miura-ori|Kresling", "variable_stiffness": true },
        { "type": "aerogel_insulation", "k_WmK": 0.012 }
      ],
      "embedded_conductors": [
        { "type": "adaptive_AI_conductor", "stack": ["graphene", "CNT", "YBCO_tapes"], "mode": "normal|superconducting" }
      ]
    },

    "sensors": {
      "array": [
        "strain_gauges_grid",
        "fiber_bragg_gratings",
        "thermocouples_mesh",
        "pressure_ports_micro",
        "plasma_sheath_probes",
        "IMU_cluster",
        "radiation_dosimeters",
        "micro_meteoroid_impact_piezo"
      ],
      "rate_hz": 1000
    },

    "control_system": {
      "ai_arch": ["model_predictive_control", "reinforcement_learning"],
      "state_vector": ["shape_params", "temp_field", "stress_field", "AoA", "q_dyn", "radiation"],
      "actuator_commands": ["SMA_current", "DEA_voltage", "EM_field_vector", "coolant_flow"],
      "safety_bounds": { "max_temp_K": 2500, "max_stress_MPa": 60, "EM_field_T": 1.2 },
      "fallback_modes": ["freeze_shape", "retract_to_safe_tube", "jettison_outer_skin_section"]
    },

    "physics_models": {
      "aero_thermo": {
        "drag_coeff": "C_d = C0 + k1*fineness^-1 + k2*AoA^2",
        "lift_coeff": "C_l = a0*AoA*(1 - compress_corr(M))",
        "heat_flux": "q_dot = k_stag * sqrt(rho) * V^3  (Fay-Riddell-style)",
        "shape_energy": "E_shape = ∫(σ:ε) dV + λ_th * ∫(∇T)^2 dV"
      },
      "liquid_metal_control": {
        "morphing": "∂u/∂t = ν∇^2 u - ∇p/ρ + F_EM/ρ + F_thermal/ρ",
        "EM_force": "F_EM = J × B + ρ_e E",
        "phase_switch": "state = liquid if T>=T_m || EM>φ_c; else semi-solid"
      }
    },

    "morph_targets": [
      { "id": "to_disk",  "profile": "reentry_drag_shield", "transition_s": 12, "priority": ["thermal","stability"] },
      { "id": "to_needle","profile": "deep_space_cruise", "transition_s": 8,  "priority": ["drag_min","EMI_shield"] },
      { "id": "to_drop",  "profile": "atmospheric_sprint", "transition_s": 5,  "priority": ["L/D","control"] }
    ],

    "optimization": {
      "objectives": ["min_drag","max_LD","min_peak_heat","min_mass","max_radiation_shield"],
      "constraints": ["budget<=B", "power<=Pmax", "safety_bounds"],
      "search": {
        "genetic_algorithm": { "pop": 80, "mutation": 0.06, "crossover": "uniform", "elitism": 0.1 },
        "bayes_optim": { "acq": "EI", "surrogate": "GP" }
      }
    },

    "operations": {
      "runtime_loop": "sense -> predict(MPC) -> decide(RL) -> actuate -> verify -> log",
      "telemetry": ["shape_params", "loads", "temps", "faults"],
      "health_management": { "self_heal": ["LM_patch_flow","SMA_realign"], "mmod_shield": "inflate_local_density" }
    },

    "manufacturing": {
      "processes": [
        "basalt_fiber_layup_from_ISRU",
        "origami_truss_3d_print",
        "liquid_metal_microchannel_printing",
        "metamaterial_tile_sintering"
      ],
      "in_space_repair": ["LM_reservoir_refill", "tile_swap_drone", "patch_print_hot"]
    },

    "verification": {
      "tests": [
        "vacuum_chamber_shape_cycles",
        "arcjet_aeroheating",
        "EM_actuation_latency",
        "micro_meteoroid_impact",
        "radiation_total_dose"
      ],
      "metrics": {
        "transition_time_s": "<=12",
        "shape_error_mm": "<=2",
        "peak_heat_reduction_pct": ">=35",
        "drag_delta_pct": "profile_dependent",
        "fault_recovery_s": "<=3"
      }
    }
  }
}
